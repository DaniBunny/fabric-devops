{
  "name": "Create Lakehouse Tables",
  "properties": {
    "activities": [
      {
        "name": "Copy sales data files to lakehouse",
        "type": "Copy",
        "dependsOn": [],
        "policy": {
          "timeout": "0.12:00:00",
          "retry": 0,
          "retryIntervalInSeconds": 30,
          "secureOutput": false,
          "secureInput": false
        },
        "typeProperties": {
          "source": {
            "type": "DelimitedTextSource",
            "storeSettings": {
              "type": "AzureBlobFSReadSettings",
              "recursive": true,
              "wildcardFolderPath": {
                "value": "@pipeline().libraryVariables.adlsContainerPath",
                "type": "Expression"
              },
              "wildcardFileName": "*.csv",
              "enablePartitionDiscovery": false
            },
            "formatSettings": {
              "type": "DelimitedTextReadSettings"
            },
            "datasetSettings": {
              "annotations": [],
              "type": "DelimitedText",
              "typeProperties": {
                "location": {
                  "type": "AzureBlobFSLocation",
                  "fileSystem": {
                    "value": "@pipeline().libraryVariables.adlsContainerName",
                    "type": "Expression"
                  }
                },
                "columnDelimiter": ",",
                "escapeChar": "\\",
                "firstRowAsHeader": true,
                "quoteChar": "\""
              },
              "schema": [],
              "externalReferences": {
                "connection": "@pipeline().libraryVariables.adlsConnectionId"
              }
            }
          },
          "sink": {
            "type": "DelimitedTextSink",
            "storeSettings": {
              "type": "LakehouseWriteSettings"
            },
            "formatSettings": {
              "type": "DelimitedTextWriteSettings",
              "quoteAllText": true,
              "fileExtension": ".txt"
            },
            "datasetSettings": {
              "annotations": [],
              "linkedService": {
                "name": "0e4f74d6_6ed5_4cb2_a8fc_526d22b6f679",
                "properties": {
                  "annotations": [],
                  "type": "Lakehouse",
                  "typeProperties": {
                    "workspaceId": "@pipeline().DataFactory",
                    "artifactId": "@pipeline().libraryVariables.lakehouseId",
                    "rootFolder": "Files"
                  }
                }
              },
              "type": "DelimitedText",
              "typeProperties": {
                "location": {
                  "type": "LakehouseLocation",
                  "fileName": {
                    "value": "@pipeline()?.TriggerEvent?.FileName",
                    "type": "Expression"
                  },
                  "folderPath": "sales-data"
                },
                "columnDelimiter": ",",
                "escapeChar": "\\",
                "firstRowAsHeader": true,
                "quoteChar": "\""
              },
              "schema": []
            }
          },
          "enableStaging": false,
          "translator": {
            "type": "TabularTranslator",
            "typeConversion": true,
            "typeConversionSettings": {
              "allowDataTruncation": true,
              "treatBooleanAsNumber": false
            }
          }
        }
      },
      {
        "name": "Run notebook Build Silver Layer",
        "type": "TridentNotebook",
        "dependsOn": [
          {
            "activity": "Copy sales data files to lakehouse",
            "dependencyConditions": [
              "Succeeded"
            ]
          }
        ],
        "policy": {
          "timeout": "0.12:00:00",
          "retry": 0,
          "retryIntervalInSeconds": 30,
          "secureOutput": false,
          "secureInput": false
        },
        "typeProperties": {
          "notebookId": {
            "value": "@pipeline().libraryVariables.notebookIdBuildSilver",
            "type": "Expression"
          },
          "workspaceId": {
            "value": "@pipeline().DataFactory",
            "type": "Expression"
          }
        }
      },
      {
        "name": "Run notebook Build Gold Layer",
        "type": "TridentNotebook",
        "dependsOn": [
          {
            "activity": "Run notebook Build Silver Layer",
            "dependencyConditions": [
              "Succeeded"
            ]
          }
        ],
        "policy": {
          "timeout": "0.12:00:00",
          "retry": 0,
          "retryIntervalInSeconds": 30,
          "secureOutput": false,
          "secureInput": false
        },
        "typeProperties": {
          "notebookId": {
            "value": "@pipeline().libraryVariables.notebookIdBuildGold",
            "type": "Expression"
          },
          "workspaceId": {
            "value": "@pipeline().DataFactory",
            "type": "Expression"
          }
        }
      }
    ],
    "libraryVariables": { 
      "adlsServer": {
        "type": "String",
        "variableName": "adlsServer",
        "libraryName": "SolutionConfig"
      },
      "adlsContainerName": {
        "type": "String",
        "variableName": "adlsContainerName",
        "libraryName": "SolutionConfig"
      },
      "adlsContainerPath": {
        "type": "String",
        "variableName": "adlsContainerPath",
        "libraryName": "SolutionConfig"
      },
      "lakehouseId": {
        "type": "String",
        "variableName": "lakehouseId",
        "libraryName": "SolutionConfig"
      },
      "adlsConnectionId": {
        "type": "String",
        "variableName": "adlsConnectionId",
        "libraryName": "SolutionConfig"
      },
      "notebookIdBuildSilver": {
        "type": "String",
        "variableName": "notebookIdBuildSilver",
        "libraryName": "SolutionConfig"
      },
      "notebookIdBuildGold": {
        "type": "String",
        "variableName": "notebookIdBuildGold",
        "libraryName": "SolutionConfig"
      }
    },
    "lastModifiedByObjectId": "e8805a8f-201d-4f06-9e35-0d0b29faebe6",
    "lastPublishTime": "2025-04-23T18:52:57Z"
  }
}